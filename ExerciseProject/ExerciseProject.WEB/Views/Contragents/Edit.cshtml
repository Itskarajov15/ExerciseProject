@model EditContragentViewModel
@{
    ViewData["Title"] = "Edit Contragent";
}

<section class="p-5">
    <h2 class="text-center">Edit Contragent</h2>
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-4 align-item-center">
            <form method="post">
                <input asp-for="Id" hidden />
                <input asp-for="UserId" hidden />
                <div asp-validation-summary="ModelOnly" class="text-danger ml-4"></div>
                <div class="row">
                    <div class="form-group text-center">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" type="text" class="form-control form-control-sm" required>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group text-center">
                        <label asp-for="Mail">Mail</label>
                        <input asp-for="Mail" type="text" class="form-control form-control-sm" required>
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="VAT">VAT</label>
                        <input asp-for="VAT" type="text" class="form-control form-control-sm" required>
                        <span asp-validation-for="VAT" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}