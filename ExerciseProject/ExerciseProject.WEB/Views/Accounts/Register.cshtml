@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger ml-4"></div>
                        <fieldset class="p-4">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control mb-3" placeholder="Email" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control mb-3" placeholder="Password" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" class="form-control mb-3" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary font-weight-bold mt-3">Register Now</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}